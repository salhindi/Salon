<!DOCTYPE html>
<html>
  <head>
    <title>Salon</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>

  <div class="m auto">
  <div class="container">
    <nav class="navbar">
      <% if !logged_in? %>
        <%= link_to "Login", login_path %>
     
      <% else %>
    
      <%= link_to 'Home', '/users' %><br>
      <%= link_to "Appointments Calendar", '/appointments' %>
      <%= link_to 'Clients', '/clients' %> |
      <%= link_to "Add a Client", '/clients/new' %> |
      <%= link_to 'Book Appointment', '/appointments/new' %>
    <br>
      <%= link_to 'Add a New Stylist to the team!', '/stylists/new' %> |
      <%= link_to 'Stylists', '/stylists'%>
    <br>
      <%= link_to 'Logout', '/logout', method: :delete %>
    </nav>
   <% end %>
   </div>
   </div>

  <main class="container" style="min-height: 500 px;">
    <%= yield %>
  </main>

  </body>
</html>
